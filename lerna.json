{
  "version": "independent",
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish packages",
      "registry": "http://localhost:4873",
      "access": "public",
      "allowBranch": [
        "main",
        "master"
      ],
      "yes": true
    },
    "version": {
      "conventionalCommits": true,
      "message": "chore(release): version packages",
      "changelogPreset": "conventional-changelog-conventionalcommits",
      "createRelease": "github",
      "push": true
    },
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": []
    },
    "add": {
      "exact": true
    }
  },
  "changelogPreset": "conventional-changelog-conventionalcommits",
  "ignoreChanges": [
    "**/*.md",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/tests/**",
    "**/docs/**",
    "**/*.stories.tsx",
    "**/__tests__/**"
  ],
  "packages": [
    "packages/*"
  ]
}